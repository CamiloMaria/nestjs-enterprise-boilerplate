# Swagger
SWAGGER_ENABLED=true
SWAGGER_TITLE='Raffle API'
SWAGGER_DESCRIPTION='Documentation Raffle API'
SWAGGER_DOCUMENT_SUFFIX='docs'
SWAGGER_VERSION='1.0.0'

# Server
NODE_ENV=development
PORT=3000
API_PREFIX=api
HOST=localhost

# JWT
JWT_SECRET=your-jwt-secret
JWT_EXPIRES_IN=1d

# CORS
CORS_ENABLED=true
CORS_ORIGIN=*

# Throttler
THROTTLE_TTL=60000
THROTTLE_LIMIT=10
THROTTLER_ENABLED=true
THROTTLER_SKIP_IF_EMPTY=false

# API Versioning
API_VERSION=1
API_SUPPORTED_VERSIONS=1,2
API_DEPRECATED_VERSIONS=
API_VERSIONING_TYPE=uri
API_VERSIONING_HEADER=X-API-Version
API_VERSIONING_ENABLED=true